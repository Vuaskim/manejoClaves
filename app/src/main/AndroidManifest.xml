<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TareaKoko"
        tools:targetApi="31">

        <!-- Main Activity - La actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Modify Password Activity -->
        <activity
            android:name=".ModificarContraseñaActivity"
            android:exported="true">
        </activity>

        <!-- Lobby Activity (o la que corresponda después de la modificación de la contraseña) -->
        <activity
            android:name=".InicioActivity"
            android:exported="true">
        </activity>

        <!-- LoginActivity (Si tienes una para iniciar sesión) -->
        <activity
            android:name=".CrearContraseñaActivity"
            android:exported="true">
        </activity>

        <!-- Activity de perfil de empresa, por ejemplo: -->
        <activity
            android:name=".InicioSesionActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".VerContraseñasActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".RegistrarActivity"
            android:exported="true">
        </activity>

        <!-- Otras actividades que hayas implementado -->
        <!-- <activity android:name=".OtraActivity" android:exported="true"/> -->

    </application>

</manifest>
